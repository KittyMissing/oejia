<!--pages/bind-login/index.wxml-->
<view class="container">
    <form bindsubmit="bindSave">
    <view class="form-box">
        <view class="row-wrap">
            <view class="label">用户名</view>
            <view class="label-right">
                <input name="username" class="input" type="text" placeholder="请输入"/>
            </view>
        </view>
        <view class="row-wrap">
            <view class="label">密码</view>
            <view class="label-right">
                <input name="password" class="input" type="password" placeholder="请输入"/>
            </view>
        </view>
    </view>
    <button type="primary" class="save-btn" formType="submit">确定</button>
    <button type="default" class="cancel-btn" bindtap="bindCancel">取消</button>
    </form>
</view>
