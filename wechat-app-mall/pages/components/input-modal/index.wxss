/* pages/components/input-modal/index.wxss */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.3;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 500rpx;
  height: 30%;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 136rpx;
}

.modal-title {
  position: relative;
  padding-top: 30rpx;
  padding-left: 35rpx;
  font-size: 32rpx;
  color: #030303;
  text-align: left;
}

.modal-content {
  position: relative;
  width: 50%;
  height: 48rpx;
  line-height: 48rpx;
  display: flex;
  font-size: 60rpx;
  padding: 61rpx 0rpx 61rpx 140rpx;
  justify-content: space-between;
  color: #888;
}

.modal-footer {
  position: relative;
  display: flex;
  flex-direction: row;
  font-size: 33rpx;
  line-height: 65rpx;
  justify-content: space-between;
  padding: 10rpx;
}

.btn-cancel {
  width: 49%;
  color: #fff;
  text-align: center;
  background-color: #888;
}

.btn-confirm {
  width: 49%;
  color: #fff;
  text-align: center;
  background-color: #ec5300;
}

.input-box {
  border: solid 1px #d8d8d8;
  width: 100rpx;
  font-size: 33rpx;
  text-align: center;
}
